<p id="notice"><%= notice %></p>

<h1>People</h1>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Species</th>
            <th>Gender</th>
            <th>Affiliations</th>
            <th>Weapon</th>
            <th>Vehicle</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @people.each do |person| %>
        <tr>
            <td><%= person.name %></td>
            <td><%= person.location %></td>
            <td><%= person.species %></td>
            <td><%= person.gender %></td>
            <td><%= person.affiliations %></td>
            <td><%= person.weapon %></td>
            <td><%= person.vehicle %></td>
            <td><%= link_to 'Show', person %></td>
            <td><%= link_to 'Edit', edit_person_path(person) %></td>
            <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<br>

<h3>Import File</h3>
<%= form_tag import_people_path, mutilpart: true do %>
<%= file_field_tag :file %>
<%= submit_tag "Upload File"%>
<%end%>

<%= link_to 'New Person', new_person_path %>